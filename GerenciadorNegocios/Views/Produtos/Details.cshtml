@model GerenciadorNegocios.Models.Produto

@{
    ViewBag.Title = "Detailhes do produto";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="success">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>

    </dl>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="button"
               value="Editar"
               class=" btn btn-success"
               onclick="location.href='@Url.Action("Edit", "Produtos", new { id = Model.Id })'" />
        <input type="button"
               value="Voltar"
               class=" btn btn-primary"
               onclick="location.href='@Url.Action("Index", "Produtos")'" />
    </div>
</div>
